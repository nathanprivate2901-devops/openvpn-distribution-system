# ==================================
# OpenVPN Distribution System
# Environment Configuration Template
# ==================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env: cp .env.example .env
# 2. Update all values with your actual configuration
# 3. NEVER commit .env to version control
#

# ==================================
# Server Configuration
# ==================================
NODE_ENV=development
PORT=3000
FRONTEND_PORT=3002

# ==================================
# Database Configuration
# ==================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=openvpn_system
DB_USER=openvpn_user
DB_PASSWORD=openvpn_secure_password_123
DB_ROOT_PASSWORD=root_secure_password_456
DB_CONNECTION_LIMIT=10

# ==================================
# JWT Authentication
# ==================================
# SECURITY: Generate a strong random secret for production
# Example: openssl rand -base64 64
JWT_SECRET=enYwzh7NHibdo8Pe3JfsjbrFeRwl/46ptgguJMO7UbeM27fl5LIFUXRt8NXEpFjfuewRtKuzUYFHxQqXaEtcdw==
JWT_EXPIRES_IN=24h

# ==================================
# OpenVPN Configuration
# ==================================
OPENVPN_SERVER=vpn.example.com
OPENVPN_PORT=1194
OPENVPN_PROTOCOL=udp
OPENVPN_CA_CERT_PATH=/etc/openvpn/ca.crt

# ==================================
# SMTP Email Configuration
# ==================================
# Mailtrap Sandbox for testing emails
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=166e9d551df8a5
SMTP_PASSWORD=3d9f175fdbeb17
SMTP_FROM=noreply@openvpn-system.local
SMTP_FROM_NAME=OpenVPN Distribution System
SMTP_FROM_EMAIL=noreply@openvpn-system.local
SMTP_REJECT_UNAUTHORIZED=false

# ==================================
# Application Configuration
# ==================================
APP_NAME=OpenVPN Distribution System
APP_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# ==================================
# Security & Rate Limiting
# ==================================
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window per IP
RATE_LIMIT_MAX_REQUESTS=100

# ==================================
# CORS Configuration
# ==================================
# Comma-separated list of allowed origins
# Use * for development only, specify exact origins in production
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,http://dree.asuscomm.com:3000,http://dree.asuscomm.com:3002
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://dree.asuscomm.com:3000,http://dree.asuscomm.com:3002

# ==================================
# Email Verification
# ==================================
VERIFICATION_TOKEN_EXPIRES_HOURS=24

# ==================================
# Admin Configuration
# ==================================
# Default admin credentials (CHANGE IMMEDIATELY after first login!)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# ==================================
# Docker Configuration
# ==================================
# Docker socket path (Linux/Mac: /var/run/docker.sock, Windows: //./pipe/docker_engine)
DOCKER_SOCKET_PATH=/var/run/docker.sock
COMPOSE_PROJECT_NAME=openvpn-system

# ==================================
# Logging Configuration
# ==================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=7d

# ==================================
# Frontend/Backend URLs
# ==================================
FRONTEND_URL=http://dree.asuscomm.com:3002
BACKEND_URL=http://dree.asuscomm.com:3000
NEXT_PUBLIC_API_BASE_URL=http://dree.asuscomm.com:3000/api
